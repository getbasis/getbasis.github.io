<% var title = 'Get Started' %>
<% is_front_page = false %>
<% include _layout/_head %>
<body class="_l-body" data-sticky-footer="true">
<% include _object/_component/_page-effect %>
<div class="p-drawer-nav" data-c="drawer">

  <% include _object/_project/_drawer %>

  <div id="container" class="_l-container" data-l="container">
    <% include _layout/_header %>

    <div id="contents" class="_l-contents" data-l="contents">
      <% include _object/_project/_hero %>

      <main id="main" class="_l-main" role="main">

        <section class="c-section">
          <div class="_c-container">
            <h1 class="c-section__title">Using npm</h1>
            <ol>
              <li>
                npm install
                <pre><code>$ npm install getbasis</code></pre>
              </li>
              <li>
                Import basis.styl your Stylus.
                <pre><code>@import /PATH/TO/node_modules/getbasis/src/stylus/basis;</code></pre>
IF you want to use build files, just do this.
                <pre><code>$ cd /PATH/TO/getbasis
$ npm install
$ npm run gulp build</code></pre>
              </li>
            </ol>
          </div>
        </section>

        <section class="c-section c-section--bg">
          <div class="_c-container">
            <h1 class="c-section__title">Download from GitHub</h1>
            <ol>
              <li>Download the basis from <a href="https://github.com/getbasis/basis/releases" target="_blank">https://github.com/getbasis/basis/releases</a></li>
              <li>
                Import basis.styl your Stylus.
                <pre><code>@import /PATH/TO/basis/src/stylus/basis;</code></pre>
  or Just this link.
                <pre><code>&lt;link rel="stylesheet" href="/PATH/TO/basis/dist/css/basis.min.css" /&gt;</code></pre>
              </li>
            </ol>
          </div>
        </section>

        <section class="c-section">
          <div class="_c-container">
            <h1 class="c-section__title">Option</h1>
            <p>
              Support IE9 ( Not perfect )
            </p>
            <pre><code>&lt;!--[if lt IE 10]&gt;
&lt;link rel=&quot;stylesheet&quot; href=&quot;/PATH/TO/basis/dist/css/plugin/basis-ie9/basis-ie9.min.css&quot; /&gt;
&lt;![endif]--&gt;</code></pre>

            <p>
              And support IE8 ( Not perfect )
            </p>
            <pre><code>&lt;!--[if lt IE 9]&gt;
&lt;script src=&quot;/PATH/TO/basis/vendor/html5.js&quot;&gt;&lt;/script&gt;
&lt;![endif]--&gt;</code></pre>

            <p>
              If you are Stylus user and you want to use only mixins, set <code>_use-mixin-only</code> to <code>true</code>.
            </p>
            <pre><code>_use-mixin-only = true;

@import /PATH/TO/basis/src/stylus/basis;</code></pre>
          </div>
        </section>

      </main>
    </div>

    <% include _layout/_footer %>
  </div>
</div>
<script src="/assets/js/app.min.js"></script>
</body>
</html>
