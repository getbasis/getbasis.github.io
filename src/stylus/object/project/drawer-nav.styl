.p-drawer-nav {
	@extend .{_prefix}c-drawer;

	&__body {
		z-index: 100000;
	}

	&__btn {
		z-index: 1;
	}

	&__menu {
		list-style: none;
		margin: 0;
		padding: (_base-line-height / 4) 0 0;
	}

	&__submenu {
		list-style: none;
		margin: 0;
		margin-right: _base-line-height * -1;
		padding-left: 1em;
	}

	&__item, &__subitem {
		position: relative;

		> a {
			transition: background-color _transition-duration _transition-function-timing;
			color: #fff;
			_font-size-line-height(14px);
			text-decoration: none;

			+_hover() {
				color: #ccc;
			}
		}
	}

	&__item {
		padding: (_base-line-height / 2) _base-line-height 0;
	}

	&__subitem {
		padding: (_base-line-height / 2) _base-line-height 0 0;
	}

	&__toggle {
		position: absolute;
		top: (_base-line-height / 2);
		right: 5px;
		bottom: 0;
		height: _base-line-height;
		width: _base-line-height;
		display: flex;
		align-items: center;
		justify-content: center;

		> .fa {
			color: #fff;
			transition: transform _transition-duration _transition-function-timing;
		}
	}

	[aria-expanded="true"] {
		> .{_prefix}c-drawer__toggle {
			> .fa {
				transform: rotate(90deg);
			}
		}
	}
}
