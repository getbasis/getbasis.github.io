.p-hero {
  @extend .{_prefix}c-hero;
  background-color: color-primary;
  background: linear-gradient(135deg, color-primary 40%, _dark(color-primary) 100%);
  height: 50vh;

  &--full {
    height: 100vh;
  }

  &, a {
    color: #fff;
  }

  .{_prefix}c-hero__header {
    _padding(.5, 0);
  }

  .{_prefix}c-hero__content {
    text-align: center;
  }

  &__title {
    _margin(0, 0, .5);
    font-basis();
    _font-size-line-height(32px);
    text-align: center;

    +_media-min('md') {
      _font-size-line-height(48px);
    }

    > img {
      margin-right: 8px;
      vertical-align: baseline;
      height: 36px;
    }
  }

  &__version {
    _margin(0, 0, 1);
    _font-size-line-height(14px);
    opacity: .8;
  }

  &__description {
    _margin(0, 0, 1);
  }
}
