.p-hero {
  background-color: color-primary;
  background: linear-gradient(135deg, color-primary 40%, bs-dark(color-primary) 100%);
  height: 50vh;

  &--full {
    height: 100vh;
  }

  &, a {
    color: #fff;
  }

  .{bs-prefix}c-hero__header {
    bs-padding(.5, 0);
  }

  .{bs-prefix}c-hero__content {
    text-align: center;
  }

  &__title {
    bs-margin(0, 0, .5);
    font-basis();

    > img {
      margin-right: 8px;
      vertical-align: baseline;
      height: 36px;
    }
  }

  &__version {
    bs-margin(0, 0, 1);
    bs-font-size-line-height(14px);
    opacity: .8;
  }

  &__description {
    bs-margin(0, 0, 1);
  }
}
