.c-btn {
  @extend $_btn;
  _transition-all();
  border: none;
  border-radius: 3px;

  &--block {
    display: block;
  }

  &--launch, &--download, &--buy {
    background-color: color-primary;
    color: #fff;

    +_hover() {
      opacity: .8;
    }

    .fa {
      margin-right: 8px;
    }
  }

  &--buy {
    background-color: #e1c600;
  }
}
