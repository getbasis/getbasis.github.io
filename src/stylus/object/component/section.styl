.c-section {
  _padding(3, 0);

  &--bg {
    background-color: #fcfcfc;
    border-top: 1px solid #eee;
    border-bottom: 1px solid #eee;
  }

  &__title {
    _font-size-line-height(_base-font-size * 2);
    _margin(0, 0, 2);
    font-weight: normal;
    text-align: center;
  }

  &--border {
    border-bottom: 1px solid _lighter(_color-gray);
    _padding(2, 0);

    .c-section__h1 {
      _margin(0, 0, 1.5);
      _font-size-line-height(2.5rem);
    }

    .c-section__h2 {
      _margin(1.5, 0, 1);
      _font-size-line-height(2rem);
    }

    .c-section__h3 {
      _margin(1.5, 0, 1);
      _font-size-line-height(1.5rem);
    }
  }
}
