._c-loading-icon {
  display: inline-block;
  font-size: 0;

  &__bar {
    margin: 0 .25rem;
    display: inline-block;
    _circle(10px);
    animation: _loading-icon 2s ease-in 0s infinite;
    background-color: #ccc;

    &:nth-child(2) {
      animation-delay: .1s;
    }

    &:nth-child(3) {
      animation-delay: .2s;
    }
  }
}

@keyframes _loading-icon {
  0% {
    transform: scale(1);
  }
  10% {
    transform: scale(1.3);
  }
  20% {
    transform: scale(1);
  }
  100% {
    transform: scale(1);
  }
}
